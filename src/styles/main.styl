@keyframes color-change {
	0% { color: red; }
	50% { color: blue; }
	100% { color: red; }
}
@keyframes color-change1 {
	0% { color: blue; }
	50% { color: red; }
	100% { color: blue; }
}

@keyframes color-change2 {
	0% { color: red; }
	20% { color: blue; }
	40% { color: yellow; }
	60% { color: green; }
	80% { color: purple; }
	100% { color: red; }
}

